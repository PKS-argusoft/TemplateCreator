@model Template

@Html.HiddenFor(m => m.TemplateId)

<form method="post" asp-action="Edit">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Edit Template</h2>
			<hr />
		</div>
		@*<div asp-validation-summary="All"></div>*@
		<input asp-for="TemplateId"  type="hidden"  class="form-control" />
		<div class="mb-3">
			<label asp-for="TemplateName"></label>
			<input asp-for="TemplateName" class="form-control" />
			<span asp-validation-for="TemplateName" class="text-danger"></span>
		</div>
		
		<button type="submit" class="btn btn-primary" style="width:150px">Save</button>
		<a asp-controller="Template" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Back to List
		</a>
	</div>
</form>


@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}